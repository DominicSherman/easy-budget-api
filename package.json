{
  "name": "easy-budget-api",
  "version": "1.0.0",
  "main": "lib/index.js",
  "author": "Dominic Sherman",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "deploy": "yarn build && firebase deploy --only functions",
    "dev": "yarn build && firebase serve --only functions",
    "codegen": "graphql-codegen --config codegen.yml",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "test": "yarn lint && yarn coverage"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "apollo-server-express": "^2.9.5",
    "config": "^3.2.4",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.2.0",
    "firebase-tools": "7.4.0",
    "graphql": "^14.5.8",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.8.3",
    "@types/graphql": "^14.5.0",
    "@graphql-codegen/introspection": "1.8.3",
    "@graphql-codegen/typescript": "1.8.3",
    "@typescript-eslint/eslint-plugin": "2.3.3",
    "@typescript-eslint/parser": "2.3.3",
    "@types/express": "^4.17.2",
    "eslint": "6.6.0",
    "eslint-config-get-off-my-lawn": "5.0.1",
    "jest": "24.9.0",
    "ts-jest": "24.1.0",
    "typescript": "3.7.2"
  },
  "jest": {
    "coverageDirectory": ".coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/*/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.ts"
    ]
  }
}
